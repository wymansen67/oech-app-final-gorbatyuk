<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.NewPasswordActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.220"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView1"
            style="@style/RobotoMedium24spLightBlackText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView" />

        <TextView
            android:id="@+id/textView2"
            style="@style/RobotoMedium14spGrayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/enter_new_password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView1" />

        <TextView
            android:id="@+id/textView3"
            style="@style/RobotoMedium14spGrayText"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:text="@string/password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView1" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/passwordEditText"
                style="@style/DefaultEditText"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:autofillHints="password"
                android:hint="@string/stars"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingStart="10dp"
                android:paddingEnd="30dp"
                android:textAppearance="@style/RobotoMedium14spLightBlackText"
                android:textColorHint="@color/light_gray_color" />

            <ImageView
                android:id="@+id/passwordVisibilityToggle1"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_eye_slash"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/passwordEditText"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textView4"
            style="@style/RobotoMedium14spGrayText"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/confirm_password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView1" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/confirmPasswordEditText"
                style="@style/DefaultEditText"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:autofillHints="password"
                android:hint="@string/stars"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingStart="10dp"
                android:paddingEnd="30dp"
                android:textAppearance="@style/RobotoMedium14spLightBlackText"
                android:textColorHint="@color/light_gray_color" />

            <ImageView
                android:id="@+id/passwordVisibilityToggle2"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_eye_slash"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/confirmPasswordEditText"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/logInButton"
            style="@style/PrimaryButtonGray"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="71dp"
            android:text="@string/log_in"
            android:textAllCaps="false"
            android:textAppearance="@style/RobotoBold16sp"
            android:textSize="16sp"
            android:clickable="false"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>